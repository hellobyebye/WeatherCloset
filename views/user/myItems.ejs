<!--mySize.ejs-->

<h2>Size</h2>

<div class="container">
    <div class="row">

        <% Items.forEach( function(model) { %>
        <div class="card col-xl-6 col-12 ">
            <div class=" h-100">

                <br>
                <h5 class="card-title">
                    <a href="/items/detail/<%= model.id %>">
                        <%= model.name %></a>
                </h5>
                <div class="image">
                    <img class="img-fluid img-thumbnail"
                        style="width:100%; height:500px;  object-fit:cover; margin-right:5px"
                        src="<%= model.image_URL %>" alt="No image">
                </div>
            </div>
        </div>
        <% }); %>

    </div>
</div>