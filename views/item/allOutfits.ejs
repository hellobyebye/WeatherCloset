<!--allOutfits.ejs-->


<form action="/item/allOutfits" method="GET">

    <div class="row">
        <div class="col-xl-8 col-12">
            <div style="padding: 5px 15px">
                <div class="row">
                    <% filteredItem.forEach( function(model) { %>
                    <div class="card col-xl-6 col-12">
                        <div class=" h-100">
                            <br>
                            <div class="image">
                                <img class="float-left img-fluid img-thumbnail"
                                    style="width:50%; height:250px; object-fit:cover; margin-right:5px"
                                    src="<%= model.image_URL %>" alt="No image">
                            </div>
                            <h5 class="card-title">
                                <a href="/item/detail/<%= model.id %>">
                                    <%= model.name %></a>
                            </h5>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-12">
            <div style="padding: 5px 15px">

                <label>Name:</label>
                <input type="text" class="form-control" name="name">

                <label>Style:</label>
                <select class="form-control" name="style">
                    <option></option>
                    <option>Formal</option>
                    <option>Casual</option>
                    <option>Holiday</option>
                </select>

                <label>Season:</label>
                <select class="form-control" name="season">
                    <option></option>
                    <option>Spring</option>
                    <option>Summer</option>
                    <option>Autumn</option>
                    <option>Winter</option>
                </select>
                <br>
                <button type="submit" class="btn btn-primary">Search</button>

            </div>

        </div>
    </div>
</form>